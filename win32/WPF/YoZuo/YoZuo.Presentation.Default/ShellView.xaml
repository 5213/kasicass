<Window x:Class="YoZuo.Presentation.Default.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="700" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <ContentControl x:Name="TabRegion"  Grid.Row="0"/>
        <ContentControl x:Name="ContentRegion"  Grid.Row="1">
        </ContentControl>
        <ContentControl x:Name="StatusBarRegion" Grid.Row="2"/>
        <ResizeGrip Grid.Row="2" HorizontalAlignment="Right"/>
    </Grid>
</Window>
